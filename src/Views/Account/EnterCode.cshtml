@model Aiursoft.Account.Models.AccountViewModels.EnterCodeViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Enter Code";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Account" asp-action="Index">Management Center</a>
        </li>
        <li class="breadcrumb-item active">
            @ViewData["Title"]
        </li>
    </ol>
    @if (!Model.ModelStateValid)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            <strong>Invalid Input!</strong>
            <div asp-validation-summary="All"></div>
        </div>
    }
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                Enter Code
            </div>
            <div class="card-body">
                <div class="row">
                    <form asp-controller="Account" asp-action="EnterCode" method="post" class="col-md-12">
                        <input asp-for="NewPhoneNumber" type="hidden" class="form-control">
                        <p>We have just sent the verification code to your phone. Please check your phone and enter it here.</p>
                        <div class="form-group">
                            <label asp-for="Code"></label>
                            <input asp-for="Code" type="text" class="form-control">
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <button data-disable-with="Submitting..." type="submit" class="btn btn-success">Confirm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>